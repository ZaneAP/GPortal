<a href="javascript:void(0);" class="game-link" data-title="Proxy" onclick="openGame()">
    <div class="portal-background bigger-portal">
        <img src="images/incog.png" alt="proxy" class="game-icon">
    </div>
</a>

<script>
function openGame() {
    var win = window.open();
    var url = "https://eic.goldenn.dev/1.html";
    var iframe = win.document.createElement('iframe');
    iframe.style.border = 'none';
    iframe.style.width = '100%';
    iframe.style.height = '100vh'; // Take up the full screen height
    iframe.style.margin = '0';
    iframe.src = url;
    win.document.body.style.margin = '0';
    win.document.body.style.height = '100vh'; // Set the body to full screen height
    win.document.body.appendChild(iframe);
}
</script>
